---
interface Icon {
  url: string;
  alt: string;
  width?: string;
}

interface Props {
  title: string;
  href: string;
  imgUrl: string;
  description: string;
  icons: Icon[]; // Array of icons
}

const { title, href, imgUrl, description, icons } = Astro.props;
---

<div
  class="relative flex sm:flex-col flex-col-reverse group overflow-hidden rounded-lg transition-transform duration-300 ease-in-out hover:-translate-y-2"
>
  <a class="absolute inset-0 z-10" href={href}>
    <span class="sr-only">View {title}</span>
  </a>
  <img
    alt={title}
    class="object-cover w-full"
    height={300}
    src={imgUrl}
    style={{
      aspectRatio: "16/10",
      objectFit: "cover",
    }}
    width={500}
  />
  <div class="p-4 flex flex-col gap-1 bg-zinc-50">
    <h3 class="font-bold text-2xl text-zinc-950">{title}</h3>
    <p class="text-sm text-zinc-950">
      {description}
    </p>
    <div class="pt-2 flex gap-2">
      {
        icons.map((icon) => (
          <img
            src={icon.url}
            width="40"
            height="40"
            class={`grayscale h-10 ${!!icon.width ? icon.width : "w-10"}`}
            alt={`${icon.alt} logo`}
            title={icon.alt}
            loading="lazy"
          />
        ))
      }
    </div>
  </div>
</div>
